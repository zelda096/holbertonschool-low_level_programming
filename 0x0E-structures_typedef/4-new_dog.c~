#include "dog.h"
#include <stdlib.h>
/**
 * new_dog - new dog
 * @name: new name
 * @age: 3.5
 * @owner: jay
 *
 * Return: Always 0.
 */
dog_t *new_dog(char *name, float age, char *owner)
{
	int val, count;
	dog *sasha = malloc(sizeof(dog));

	if (sasha == NULL)
		return (NULL);

	for (val = 0; name[val]; val++)
		;
	sasha->name = malloc((val + 1) * sizeof(char));
	if (sasha->name == NULL)
	{
		free(sasha);
		return (NULL);
	}
	for (count = 0; count < val; count++)
		sasha->name[count] = name[count];
	sasha->name[count] = '\0';

	if (age > 0.0)
		sasha->age = age;
	else
		return (NULL);

	for (val = 0; owner[val]; val++)
		;
	sasha->owner = malloc((val + 1) * sizeof(char));
	if (sasha->owner == NULL)
	{
		free(sasha->name);
		free(sasha);
		return (NULL);
	}
	for (count = 0; count < val; count++)
		sasha->owner[count] = owner[count];
	sasha->owner[count] = '\0';

	return (sasha);
}
